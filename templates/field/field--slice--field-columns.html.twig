{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'slice-column-items',
    'slice-column-items-' ~ items|length,
  ]
%}

{% if multiple %}

  <div{{ attributes.addClass(classes, 'field__items row') }}>
    {% for item in items %}
      {% set col_class = item.content['#column_item'].field_class_name[0].value %}
      <div{{ item.attributes.addClass('field__item slice slice-column', col_class) }}>
        {{ item.content }}
      </div>
    {% endfor %}
  </div>

{% else %}

  {% for item in items %}
    <div{{ attributes.addClass(classes, 'field__item slice slice-column') }}>
      {{ item.content }}
    </div>
  {% endfor %}

{% endif %}
